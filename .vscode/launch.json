{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch index.html (disable sourcemaps)",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            "smartStep": true,
            "file": "${workspaceRoot}/docs/index.html",
            "sourceMapPathOverrides": {
                "webpack:///./~/*": "${workspaceRoot}/rts-game/node_modules/*",
                "webpack:///./src/*": "${workspaceRoot}/rts-game/src/*",
                "webpack:///../engine/dist": "${workspaceRoot}/engine/dist/*"
            }
        }
    ]
}
